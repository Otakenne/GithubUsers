<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUsers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Colors -->
        <item name="default_color">@color/primary_color</item>
        <item name="default_color_secondary">@color/default_color_secondary_light</item>
        <item name="default_text_color">@color/black</item>
        <item name="secondary_text_color">@color/text_color_secondary_light</item>
        <item name="accent_color">@color/accent</item>
        <item name="mainButtonBackgroundColor">@color/primary_color</item>
        <item name="separator_view_color">@color/separator_gray</item>
        <item name="picture_background_color">@color/default_color_secondary_light</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="BasicTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?default_text_color</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
    </style>

    <style name="HeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?default_text_color</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="BasicButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>